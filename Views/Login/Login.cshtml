@model MSMS.Models.Login.UserCredential
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/LoginTagHelper.css">
</head>

<div class="login-container">
    <form class="form" asp-action="Login" method="post">
        @* <span><h1>MSMS</h1></span> *@
        <div class="form-group">
            <input type="text" class="input-form" id="username" placeholder="Enter username" asp-for="Username">
            <span asp-validation-for="Username" class="text-error"></span>
        </div>
        <div class="form-group">
            <input type="password" class="input-form" id="password" placeholder="Password" asp-for="Password">
            <span asp-validation-for="Password" class="text-error"></span>
        </div>
        <button type="submit" class="submit-button" >Submit</button>
    </form>
</div>

